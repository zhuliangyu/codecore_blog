<% @posts.each do |e| %>
    <h3>Title:<%= e.title %></h3>
    <h3>Body:<%= e.body %></h3>
    <h3>Category:<%= e.category.name %></h3>
    <h3><%= link_to "Show", post_path(e) %></h3>

    <% if user_sign_in? && can?(:manage,e) %>
        <h3><%= link_to "Edit", edit_post_path(e)
        %></h3>
        <h3><%= link_to "Delete", post_path(e), method: :delete, data: {confirm: "Are you sure"} %>
        </h3>

    <% end %>



    <hr>

<% end %>

<%= paginate @posts %>
